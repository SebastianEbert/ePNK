( a & b  ,                    # the initial condition

  ( a &  b &  a' &  b' ) |    # (1,1) -> (1,1)
  ( a &  b & !a' &  b' ) |    # (1,1) -> (0,1)
  (!a &  b & !a' & !b' ) |    # (0,1) -> (0,0) 
  (!a & !b &  a' & !b' ) |    # (0,0) -> (1,0)
  ( a & !b &  a' &  b' )   ,  # (1,0) -> (1,1)
						 		
  { !a }                 # the fairness conditions
)